{
    "include": [".react-server/**/*.ts", "src/**/*.ts", "src/**/*.tsx"],
    "compilerOptions": {
        "types": ["react/experimental", "react-dom/experimental", "node"],
        "target": "es2016",
        "module": "commonjs",
        "jsx": "react",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    }
}
